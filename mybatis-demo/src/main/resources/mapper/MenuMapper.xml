<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatisdemo.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.mybatisdemo.entity.Menu">
        <id column="MENU_ID" property="menuId" />
        <result column="PARENT_ID" property="parentId" />
        <result column="MENU_NAME" property="menuName" />
        <result column="URL" property="url" />
        <result column="PERMS" property="perms" />
        <result column="ICON" property="icon" />
        <result column="TYPE" property="type" />
        <result column="ORDER_NUM" property="orderNum" />
        <result column="CREATE_TIME" property="createTime" />
        <result column="MODIFY_TIME" property="modifyTime" />
    </resultMap>

    <select id="findMenuByUserName" resultMap="BaseResultMap">
        select m.perms from t_role r
        left join t_user_role ur on(r.role_id = ur.role_id)
        left join t_user u on(u.user_id = ur.user_id)
        left join t_role_menu rm on(rm.role_id = r.role_id)
        left join t_menu m on(m.menu_id = rm.menu_id )
        where m.type = 1 and u.username = #{userName}
    </select>
</mapper>
